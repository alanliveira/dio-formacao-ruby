<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div class="container-fluid mb-3">
      <div class="alert alert-danger" role="alert">
        <strong><%= pluralize(book.errors.count, "error") %> problemas encontrados::</strong>
        <div>
          <ul>
            <% book.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, 'Título', class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :author, 'Autor', class: 'form-label' %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :star, 'Avaliação', class: 'form-label' %>
    <%= form.number_field :star, class: 'form-control', min: 0, max: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.textarea :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <% if form.object.persisted? %>
      <%= form.submit 'Atualizar', class: 'btn btn-warning w-100' %>
    <% else %>
      <%= form.submit 'Cadastrar', class: 'btn btn-success w-100' %>
    <% end %>
  </div>
<% end %>
