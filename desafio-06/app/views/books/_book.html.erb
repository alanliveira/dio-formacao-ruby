<div id="<%= dom_id book %>" class="container-fluid border rounded my-2 p-2">
  <div>
    <%= tag.h2 "#{book.title} - #{'â­' * book.star}" %>
    <%= tag.i "Author: #{book.author}" %>
    <hr>
    <%= book.description %>
    <hr>
    <div class="d-flex justify-content-end gap-2">
      <%= link_to edit_book_path(book), class: 'btn btn-warning' do %>
        <i class="bi bi-pencil-square"></i>
